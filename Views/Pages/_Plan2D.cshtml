                            <div id="colorPicker1" data-color="#cebbca"></div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item md-sm-active-block">
                    <div class="card">
                        <h2 class="card-title m-auto pt-2">Profil</h2>
                        <label asp-for="@template.Identity" class="label-pp">Prénom et Nom :</label>
                        <input type="text" asp-for="@template.Identity" id="name" name="Name" value="" class="form-control input-pp" />
                        <span asp-validation-for="@template.Identity" class="text-danger"></span>
                        <div class="flex flex-row text-left pb-2">
                            <div class="col-md-6 ">
                                <label for="job1" class="label-flex-pp">Métier 1 :</label>
