                                <input type="text" id="job2" name="Job2" value="" class="form-control input-flex-pp" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item md-sm-active-block">
                    <div class="card">
                        <h2 class="card-title m-auto pt-2">Coordonnées</h2>
                        <label asp-for="@template.NumberPhone" class="label-pp">N° de téléphone :</label>
                        <input type="tel" asp-for="@template.NumberPhone" id="numberPhone" name="NumberPhone" value="" class="form-control input-pp" />
                        <span asp-validation-for="@template.NumberPhone" class="text-danger"></span>

                        <label asp-for="@template.City" class="label-pp">Localisation :</label>
                        <input type="text" asp-for="@template.City" id="city" name="city" value="" class="form-control input-pp" />
                        <span asp-validation-for="@template.City" class="text-danger"></span>

                        <label asp-for="@template.Facebook" class="label-pp">Facebook :</label>
                        <input type="url" asp-for="@template.Facebook" id="facebook" name="Facebook" value="" class="form-control input-pp" />
                        <span asp-validation-for="@template.Facebook" class="text-danger"></span>

                        <label asp-for="@template.Website" class="label-pp">Site Web :</label>
                        <input type="url" asp-for="@template.Website" id="website" name="Website" value="" class="form-control input-pp" />
                        <span asp-validation-for="@template.Website" class="text-danger"></span>

                        <label asp-for="@template.Email" class="label-pp">Email :</label>
                        <input type="email" asp-for="@template.Email" id="email" name="Email" value="" class="form-control input-pp" />
                        <span asp-validation-for="@template.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="carousel-item md-sm-active-block">
                    <div class="card">
                        <h2 class="card-title m-auto pt-2">Logo</h2>

                        <label for="logo" class="label-pp">Image :</label>
                        <input type="file" id="logo" name="Logo" value="" class="form-control-file input-pp" />

                        <label for="company" class="label-pp">Entreprise :</label>
                        <input type="text" id="company" name="Company" value="" class="form-control input-pp" />

                        <label for="slogan" class="label-pp">Slogan :</label>
                        <input type="text" id="slogan" name="Slogan" value="" class="form-control input-pp" />
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev md-sm-flex" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next md-sm-flex" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</form>

